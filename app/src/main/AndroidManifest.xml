<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.verstarr.paydaybudget" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:logo="@drawable/jellyfish"
        android:theme="@style/Theme.AppCompat" >
        <activity
            android:name="net.verstarr.paydaybudget.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="net.verstarr.paydaybudget.CalendarActivity"
            android:label="@string/title_activity_calendar" >
            <intent-filter>
                <action android:name="Calendar.intent.action.Launch" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="net.verstarr.paydaybudget.SecondaryActivityView"
            android:label="2nd View" >
        </activity>
        <activity
            android:name="net.verstarr.paydaybudget.NewBudgetActivity"
            android:label="New Budget" >
        </activity>
    </application>

</manifest>
